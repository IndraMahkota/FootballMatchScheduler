<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.indramahkota.footballapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.indramahkota.footballapp.FootballApp"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.activity.splash.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.main.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/MainTheme" />
        <activity
            android:name=".ui.activity.match.MatchActivity"
            android:label="@string/title_activity_league_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activity.detail.match.MatchDetailsActivity"
            android:label="@string/title_activity_match_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activity.detail.team.TeamDetailsActivity"
            android:label="@string/title_activity_team_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activity.search.SearchActivity"
            android:label="@string/title_activity_search" />
        <activity
            android:name=".ui.activity.favorite.FavoriteActivity"
            android:label="@string/title_activity_favorite"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>